{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "jsx": "react-native",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["react", "react-native"]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "plugins": [{ "name": "typescript-tslint-plugin" }]
}
